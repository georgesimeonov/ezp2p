@model EasyP2P.Web.Models.SupplierViewModel

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> Delete Supplier</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this supplier?
                    </div>

                    <h5>Supplier Information</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Contact Person:</dt>
                        <dd class="col-sm-9">@Model.ContactPerson</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            <span class="badge @Model.StatusBadgeClass">
                                <i class="@Model.StatusIcon"></i> @Model.Status
                            </span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                        @Html.AntiForgeryToken()
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Supplier
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>