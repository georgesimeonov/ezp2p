@using System.Security.Claims
@{
    ViewData["Title"] = "Access Denied";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-shield-x"></i> Access Denied</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation display-1 text-danger"></i>
                    </div>
                    <h5 class="card-title">You don't have permission to access this resource</h5>
                    <p class="card-text text-muted">
                        Your current role doesn't include the necessary permissions to view this page.
                    </p>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="alert alert-info">
                            <strong>Current Role:</strong> @User.FindFirstValue("UserRole")<br>
                            <strong>Department:</strong> @User.FindFirstValue("Department")
                        </div>
                        <p class="text-muted small">
                            If you believe you should have access to this resource, please contact your administrator.
                        </p>
                    }

                    <div class="mt-4">
                        @if (!string.IsNullOrEmpty(returnUrl))
                        {
                            <a href="@returnUrl" class="btn btn-outline-primary me-2">Try Again</a>
                        }
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>